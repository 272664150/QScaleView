<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <com.example.qscaleview.view.QScaleView
        android:id="@+id/select_scale_widget"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_centerInParent="true"
        app:lineColor="#FFCFCFCF"
        app:lineHorizontalColor="#FFCFCFCF"
        app:lineHorizontalEnable="true"
        app:lineHorizontalHeight="1dp"
        app:lineMarginBottom="24dp"
        app:lineSpaceWidth="50dp"
        app:lineTextColor="#FFCFCFCF"
        app:lineTextSize="18sp"
        app:lineWidth="1dp"
        app:pointerLineColor="#FFF87D2F"
        app:pointerLineEnable="true"
        app:pointerLineTextColor="#FFF87D2F"
        app:pointerLineTextSize="40sp"
        app:pointerLineTriangleEnable="true"
        app:pointerLineWidth="5dp" />

</RelativeLayout>